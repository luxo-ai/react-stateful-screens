{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": false,
    "inlineSourceMap": false,
    "outDir": "dist",
    "removeComments": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules",
    "dist"
  ],
  "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx"]
}
